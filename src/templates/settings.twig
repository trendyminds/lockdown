{% import "_includes/forms" as forms %}
{% from "lockdown/_includes/macros.twig" import configWarning %}

{{ forms.lightswitchField({
    first: true,
    label: 'Enabled',
    id: 'enabled',
    name: 'enabled',
    warning: configWarning("enabled", "lockdown"),
    on: settings['enabled']})
}}

{{ forms.textField({
    label: 'Template',
    instructions: 'If you would like to render a custom template instead of a generic Access Denied message',
    placeholder: "_errors/403.twig",
    id: 'template',
    name: 'template',
    warning: configWarning("template", "lockdown"),
    value: settings['template']})
}}

{{ forms.textField({
    label: 'Sidebar Label',
    id: 'sidebarLabel',
    instructions: 'Modify the label to something more client-friendly',
    name: 'sidebarLabel',
    placeholder: "Lockdown",
    warning: configWarning("sidebarLabel", "lockdown"),
    value: settings['sidebarLabel']})
}}
